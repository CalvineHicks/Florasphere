<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_submission"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/search_text_by_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="20dp"
        android:hint="plant name"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search">

    </EditText>

    <TextView
        android:id="@+id/PlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plant Name"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/search_text_by_name"
        android:layout_toLeftOf="@+id/title"
        android:layout_toStartOf="@+id/title"
        android:layout_marginLeft = "5dp">
    </TextView>

    <TextView
        android:id="@+id/WateringAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watering Amount"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/search_text_by_watering_amount"
        android:layout_toLeftOf="@+id/title"
        android:layout_toStartOf="@+id/title"
        android:layout_marginTop = "5dp"
        android:layout_marginLeft = "5dp">
    </TextView>

    <EditText
        android:id="@+id/search_text_by_watering_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/search_text_by_name"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search"
        android:hint="(light,medium,soak)">

    </EditText>

    <TextView
        android:id="@+id/SearchWateringFrequency"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Watering Frequency"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/search_text_by_watering_frequency"

        android:layout_marginLeft = "5dp"
        android:layout_marginTop = "10dp"
        >
        </TextView>

    <EditText
        android:id="@+id/search_text_by_watering_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/search_text_by_watering_amount"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search"
        android:hint="(1, 2, 3, 4, 5, 6, 7, 8, or 9)"></EditText>

    <TextView
        android:id="@+id/SearchLightAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light Amount"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/search_text_by_light_amount"
        android:layout_toLeftOf="@+id/title"
        android:layout_toStartOf="@+id/title"
        android:layout_marginLeft = "5dp">
    </TextView>

    <EditText
        android:id="@+id/search_text_by_light_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/search_text_by_watering_frequency"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search"
        android:hint="(low,partial,full)"></EditText>

    <Button
        android:id="@+id/search"
        android:text="search by single field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_text_by_light_amount"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/or"
        android:text="OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/view_all"
        android:text="view all plants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/or"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>

