<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/plant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant Name"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/plant_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/plant_image"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/watering_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result1"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        ></TextView>

    <TextView
        android:id="@+id/watering_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result2"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        ></TextView>

    <TextView
        android:id="@+id/light_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result3"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        ></TextView>
    <TextView
        android:id="@+id/gen_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result4"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        ></TextView>
</LinearLayout>

